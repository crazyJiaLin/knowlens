# 应用配置
NODE_ENV=test
PORT=3001
APP_NAME=Knowlens

# MongoDB 数据库（测试环境）
MONGODB_URI=mongodb://localhost:27017/knowlens-test

# Redis（测试环境）
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=1

# JWT 认证
JWT_SECRET=test-jwt-secret-key-at-least-32-characters
JWT_EXPIRES_IN=7d

# 阿里云 OSS（测试环境使用开发配置）
ALIYUN_ACCESS_KEY_ID=your-access-key-id
ALIYUN_ACCESS_KEY_SECRET=your-access-key-secret
ALIYUN_OSS_REGION=oss-cn-hangzhou
ALIYUN_OSS_BUCKET=knowlens-test
ALIYUN_OSS_ENDPOINT=oss-cn-hangzhou.aliyuncs.com

# 阿里云短信服务
ALIYUN_SMS_SIGN_NAME=Knowlens
ALIYUN_SMS_TEMPLATE_CODE=SMS_xxxxxx
ALIYUN_SMS_REGION=cn-hangzhou

# Moonshot Kimi API
MOONSHOT_API_KEY=your-moonshot-api-key
MOONSHOT_BASE_URL=https://api.moonshot.cn/v1
MOONSHOT_MODEL=moonshot-v1-k2

# 科大讯飞语音识别
XFYUN_APP_ID=your-app-id
XFYUN_SECRET_KEY=your-secret-key
XFYUN_API_KEY=your-api-key

# BullMQ 任务队列配置
QUEUE_REDIS_HOST=localhost
QUEUE_REDIS_PORT=6379
QUEUE_VIDEO_CONCURRENCY=2
QUEUE_PDF_CONCURRENCY=3
QUEUE_KNOWLEDGE_CONCURRENCY=1

# 日志配置
LOG_LEVEL=debug
LOG_DIR=./logs

# CORS 配置
CORS_ORIGIN=http://localhost:5173
